[client]
port = 3306
socket = @@TMPSRV@@/mysql.sock

[mysqld]
server-id = 1
port = 3306
bind-address = 127.0.0.1
default-storage-engine = InnoDB
socket = @@TMPSRV@@/mysql.sock
tmpdir = @@TMPSRV@@
datadir = @@MYDB@@/mysql
log_error = @@MYLOG@@/log/mysql/mysql.log
pid_file = @@MYLOG@@/log/mysql/mysql.pid
character-set-server = utf8
collation-server = utf8_general_ci
skip-external-locking
open_files_limit = 1024
join_buffer_size = 4M
key_buffer_size = 10M
query_cache_size = 10M
query_cache_limit = 10M
thread_cache_size = 8
table_open_cache = 64
table_definition_cache = 400
max_allowed_packet = 1M
tmp_table_size = 32M
max_heap_table_size = 32M
sort_buffer_size = 1M
read_buffer_size = 1M
read_rnd_buffer_size = 4M
myisam_sort_buffer_size = 16M
concurrent_insert = 2
sync_binlog = 0
expire_logs_days = 2
log-bin = mysql-bin
binlog_format = mixed
binlog_direct_non_transactional_updates = true
slow_query_log = 1
slow_query_log_file = @@MYLOG@@/log/mysql/mysql-slow.log

# InnoDB settings
innodb = on
innodb_data_home_dir = @@MYDB@@/mysql
innodb_data_file_path = ibdata1:10M:autoextend
innodb_log_group_home_dir = @@MYDB@@/mysql
innodb_buffer_pool_size = 16M
# innodb_additional_mem_pool_size = 2M
innodb_log_file_size = 4M
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 50

[mysqldump]
quick
max_allowed_packet = 16M

[mysql]
no-auto-rehash
# safe-updates

[myisamchk]
key_buffer_size = 32M
sort_buffer_size = 32M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout

[mysqld_safe]
log_error = @@MYLOG@@/log/mysql/mysql.log
pid_file = @@MYLOG@@/log/mysql/mysql.pid
